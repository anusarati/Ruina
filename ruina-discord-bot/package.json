{
  "name": "ruina-discord-bot",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "build": "tsc",
    "build:full": "npm run clean; npm run build:myf && npm run build && npm run build:unchecked",
    "build:unchecked": "npm run bundle && npm run copy:myf && npm run minify && npm run zip",
    "build:myf": "npm run --prefix may-you-find build && npm link ./may-you-find/pkg && npm link may-you-find",
    "bundle": "./node_modules/.bin/esbuild ./src --bundle --platform=node --target=node18 --outdir=./build --external:may-you-find",
    "copy:data": "rm -r ./src/data; cp -r ../ruina-reparser/out/Data ./src/data",
    "copy:myf": "mkdir -p build/node_modules && cp -rL may-you-find/pkg build/node_modules/may-you-find",
    "clean": "tsc --build --clean; rm -r build; rm ruina-discord-bot.zip",
    "link": "npm link may-you-find/pkg && npm link may-you-find",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts .",
    "minify": "mv build/src.js t.js && ./node_modules/.bin/esbuild t.js --minify --outfile=./build/src.js && rm t.js",
    "test": "jest",
    "test:update": "jest -u",
    "zip": "zip -r ruina-discord-bot.zip ./build"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.379.1",
    "@ghoulean/ruina-common": "file:../ruina-common",
    "@types/aws-lambda": "^8.10.119",
    "@types/node": "^20.4.5",
    "fastest-levenshtein": "^1.0.16",
    "tweetnacl": "^1.0.3"
  },
  "bundleDependencies": [
    "@aws-sdk/client-secrets-manager",
    "@ghoulean/ruina-common",
    "@types/aws-lambda",
    "@types/node",
    "fastest-levenshtein",
    "tweetnacl"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "esbuild": "^0.18.10",
    "esbuild-plugin-tsc": "^0.4.0",
    "esbuild-plugin-wasm": "^1.1.0",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
